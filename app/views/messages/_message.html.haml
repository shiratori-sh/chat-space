.message{"data-message-id": message.id}
  .message__info
    .message__info__talker
      = message.user.name
    .message__info__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__content
    - if message.content.present?
      %P.message__content__text
        = message.content
    = image_tag message.image.url, class: 'message__content__image' if message.image.present?


